def speak_text(text):
    safe_text = text.replace('"', '`"')
    script = f'''
    Add-Type -AssemblyName System.Speech
    $speak = New-Object System.Speech.Synthesis.SpeechSynthesizer
    $speak.Speak("{safe_text}")
    '''
    subprocess.run(["powershell", "-Command", script])

def run_topic_explainer():
    print("\nðŸ§  Mood-Based Python Topic Explainer")
    print("=" * 50)
    print("\nðŸ“š Topics:")
    for topic in topic_data:
        print(" -", topic.capitalize())

    topic = input("\nðŸ” Choose a topic: ").strip().lower()
    if topic not in topic_data:
        print("âŒ Topic not found.")
        return

    mood = input("ðŸ™‚ Enter your mood (happy, curious, funny): ").strip().lower()
    if mood not in topic_data[topic]:
        print("âŒ Mood not supported.")
        return

    explanation = topic_data[topic][mood]
    print("\nâœ… Explanation:\n")
    print(explanation)

    if input("\nðŸ”Š Hear it aloud? (yes/no): ").strip().lower() == "yes":
        speak_text(explanation)

    print("\nâœ… Done. Keep exploring!")

if __name__ == "__main__":
    run_topic_explainer()
